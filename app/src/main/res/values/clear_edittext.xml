<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseEditText">
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/blue_gray_50</item>
        <item name="android:textColorHint">@color/blue_gray_30</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ClearEditText" parent="BaseEditText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment" tools:ignore="NewApi">gravity</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/clear</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ClearEditTextMultiLine">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAlignment" tools:ignore="NewApi">gravity</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/clear</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/blue_gray_50</item>
        <item name="android:textColorHint">@color/blue_gray_30</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SearchEditText" parent="ClearEditText">
        <item name="android:drawableLeft">@drawable/search</item>
    </style>

</resources>