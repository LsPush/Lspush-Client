<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" android:innerRadius="4dp">
            <solid android:color="@color/blue_4_whiteout" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle" android:innerRadius="4dp">
            <solid android:color="@color/grey_86" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:innerRadius="4dp">
            <solid android:color="@color/light_blue_5" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>