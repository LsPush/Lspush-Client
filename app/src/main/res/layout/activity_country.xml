<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.auth.com.CountryActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.decay.recyclerview.index.IndexBar
        android:id="@+id/indexBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="4dp"
        app:index_search="@drawable/search" />

    <TextView
        android:id="@+id/indexNotice"
        android:layout_width="@dimen/index_notice_size"
        android:layout_height="@dimen/index_notice_size"
        android:layout_gravity="center"
        android:background="@drawable/index_notice_background"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>